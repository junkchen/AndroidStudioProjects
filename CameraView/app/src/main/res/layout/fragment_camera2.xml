<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Camera2Fragment">

    <com.junkchen.cameraview.AutoFitTextureView
            android:id="@+id/tv_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_capture"
            android:text="picture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/btn_switch"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"/>

    <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_switch"
            android:text="switch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_capture"
            android:layout_marginBottom="16dp"
            app:layout_constraintRight_toLeftOf="@id/btn_video"
            android:layout_height="wrap_content"/>

    <Button
            android:layout_width="wrap_content"
            android:id="@+id/btn_video"
            android:text="video"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_switch"
            android:layout_marginBottom="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>