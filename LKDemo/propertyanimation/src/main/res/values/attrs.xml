<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleIndicatorView">
        <attr name="circleArcSize" format="dimension|reference" />
        <attr name="sweepAngle" format="float" />
        <attr name="smallCircleColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="PercentProgressBar">
        <attr name="percent" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ThreeSectionView">
        <attr name="indicatorColor" format="color|reference" />

        <attr name="leftSectionColor" format="color|reference" />
        <attr name="centerSectionColor" format="color|reference" />
        <attr name="rightSectionColor" format="color|reference" />

        <attr name="leftTextColor" format="color|reference" />
        <attr name="centerTextColor" format="color|reference" />
        <attr name="rightTextColor" format="color|reference" />

        <attr name="leftText" format="string|reference" />
        <attr name="centerText" format="string|reference" />
        <attr name="rightText" format="string|reference" />

        <attr name="textColor" format="color|reference"/>
        <attr name="textSize" format="dimension|reference"/>

        <attr name="indicatorLocation" format="enum">
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>

    </declare-styleable>
</resources>