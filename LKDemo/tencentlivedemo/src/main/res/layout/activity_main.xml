<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.junkchen.tencentlivedemo.MainActivity">

    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/video_view"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_startPreview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:text="startPreview"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_startPush"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:text="startPush"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_stopPush"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:text="stopPush"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_stopPreview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:text="stopPreview"
            android:textAllCaps="false"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_other"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="doClick"
            android:text="other"
            android:textAllCaps="false"
            android:textSize="24sp" />
    </LinearLayout>

</RelativeLayout>
